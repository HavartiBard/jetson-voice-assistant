# OpenAI API Key (get one from https://platform.openai.com/)
OPENAI_API_KEY=your_openai_api_key_here
WAKE_WORD=jetson

# Whisper Settings
# Modes:
# - local: run Whisper locally via faster-whisper (offline)
# - api: use OpenAI Whisper API (online)
WHISPER_MODE=local
WHISPER_MODEL_SIZE=small
WHISPER_LANGUAGE=en

# Audio Recording Settings
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1
AUDIO_RECORD_SECONDS=4

# Voice Settings
VOICE_RATE=150  # Speech rate (words per minute)
VOICE_VOLUME=1.0  # 0.0 to 1.0

# Web Search Settings
DEFAULT_SEARCH_ENGINE=https://www.google.com/search?q=

# Logging
ENABLE_LOGGING=True
LOG_LEVEL=INFO
LOG_FILE=assistant.log
